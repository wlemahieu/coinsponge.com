{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@pulse/*": ["pulse/*"],
      "@routes/*": ["routes/*"],
      "@store/*": ["store/*"],
      "@transformers/*": ["transformers/*"]
    }
  },

  "exclude": ["node_modules", "build", "client"]
}
